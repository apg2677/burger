<h1>Good Burger</h1>

<h2>Burgers not eaten</h2>

<ul>
    {{#each burgers}}
        <li>{{burger_name}}</li>
    {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="bn" name="name">
  </div>

  <div class="form-group">
    <label for="slee">Devoured?</label><br>
    <input type="radio" name="devoored" value="1" checked> Not eaten<br>
    <input type="radio" name="devoured" value="0"> Devoured
  </div>

  <button type="submit">Add Burger</button>
</form>
